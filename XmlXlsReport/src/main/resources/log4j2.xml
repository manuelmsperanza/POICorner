<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="0">
	<Properties>
		<Property name="activeProfile">stdout</Property>
		<Property name="activeLevel">TRACE</Property>
		<Property name="rollingFilename">OrcXlsReport</Property>
	</Properties>
	<Appenders>
		<Console name="stdout" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %t %-5p [%c{1}::%M %L]  %m%n"/>
		</Console>
		<RollingFile append="true" name="rollingFile" fileName="logs/${rollingFilename}.log" filePattern="logs/$${date:yyyy-MM}/${rollingFilename}-%d{MM-dd-yyyy}-%i.log" immediateFlush="true">
			<PatternLayout>
				<Pattern>%d{yyyy-MM-dd HH:mm:ss,SSS} %t %-5p [%c{1}::%M %L] %m%n
				</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy/>
				<SizeBasedTriggeringPolicy size="10 MB"/>
			</Policies>
		</RollingFile>
	</Appenders>
	<Loggers>
		<Logger name="com.hoffnungland.db.corner.dbconn.ConnectionManager" level="${activeLevel}" additivity="false">
			<AppenderRef ref="${activeProfile}"/>
		</Logger>
		<Logger name="com.hoffnungland.db.corner.dbconn.StatementCached" level="${activeLevel}" additivity="false">
			<AppenderRef ref="${activeProfile}"/>
		</Logger>
		<Logger name="com.hoffnungland.db.corner.dbconn.StatementsCache" level="${activeLevel}" additivity="false">
			<AppenderRef ref="${activeProfile}"/>
		</Logger>
		<Logger name="com.hoffnungland.db.corner.oracleconn.OrclConnectionManager" level="${activeLevel}" additivity="false">
			<AppenderRef ref="${activeProfile}"/>
		</Logger>
		<Logger name="com.hoffnungland.db.corner.oracleconn.TOMOrclConnManager" level="${activeLevel}" additivity="false">
			<AppenderRef ref="${activeProfile}"/>
		</Logger>
		<Logger name="com.hoffnungland.poi.corner.xmlxlsreport.App" level="${activeLevel}" additivity="false">
			<AppenderRef ref="${activeProfile}"/>
		</Logger>
		<Logger name="com.hoffnungland.poi.corner.xmlxlsreport.ExcelManager" level="${activeLevel}" additivity="false">
			<AppenderRef ref="${activeProfile}"/>
		</Logger>
		<Logger name="com.hoffnungland.poi.corner.xmlxlsreport.NodeSheet" level="${activeLevel}" additivity="false">
			<AppenderRef ref="${activeProfile}"/>
		</Logger>
		<Logger name="com.hoffnungland.poi.corner.xmlxlsreport.XmlReportWorkbook" level="${activeLevel}" additivity="false">
			<AppenderRef ref="${activeProfile}"/>
		</Logger>
		<Root level="error">
			<AppenderRef ref="${activeProfile}"/>
		</Root>
	</Loggers>
</Configuration>
